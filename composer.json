{
  "name": "grizz-it/identifier",
  "description": "A set of identifier generators.",
  "keywords": ["identifier"],
  "type": "library",
  "license": "MIT",
  "prefer-stable": true,
  "minimum-stability": "stable",
  "require": {
    "php": "^7.2"
  },
  "authors": [
    {
      "name": "GrizzIT",
      "homepage": "https://www.grizzit.com/",
      "role": "Developer"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "GrizzIt\\Identifier\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GrizzIt\\Identifier\\Tests\\": "tests/"
    }
  },
  "archive": {
    "exclude": [
      "/tests",
      "/.gitignore",
      "/.travis.yml",
      "/phpunit.xml",
      "/phpcs.xml",
      "/PULL_REQUEST_TEMPLATE.md",
      "/CODE_OF_CONDUCT.md",
      "/CONTRIBUTING.md"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "squizlabs/php_codesniffer": "^3.4"
  }
}
